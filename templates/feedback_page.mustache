<div class="feedback-admin">

    <h4>Datacurso Ratings</h4>

    <form class="feedback-form d-flex gap-5 mb-3">
        <input type="text" name="feedbacktext" class="form-control mr-2" placeholder="Agrega una respuesta preestablecida" required>
        <button type="submit" class="btn btn-primary">Agregar</button>
    </form>

    <ul class="feedback-list list-group">
        {{#items}}
            <li class="feedback-item list-group-item d-flex justify-content-between align-items-center">
                <span class="feedback-text">{{feedbacktext}}</span>
                <button type="button" class="btn btn-outline-danger btn-sm btn-delete" data-id="{{id}}"> X </button>
            </li>
        {{/items}}

        {{^items}}
