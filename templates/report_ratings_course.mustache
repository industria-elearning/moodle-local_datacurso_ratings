{{!
    Template for displaying course ratings report table
    
    Context variables:
    * activities - Array of activity rating data
    * has_data - Boolean indicating if there's data to show
    * summary - Summary statistics object
    * courseid - Course ID
}}

{{#has_data}}
<!-- Summary Statistics -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0 text-white">{{#str}} reportsummary, local_datacurso_ratings {{/str}}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2 col-sm-4 text-center">
                        <div class="border-end">
                            <h3 class="text-primary mb-0">{{summary.total_activities}}</h3>
                            <small class="text-muted">{{#str}} totalactivities, local_datacurso_ratings {{/str}}</small>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 text-center">
                        <div class="border-end">
                            <h3 class="text-info mb-0">{{summary.activities_with_ratings}}</h3>
                            <small class="text-muted">{{#str}} ratedactivities, local_datacurso_ratings {{/str}}</small>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 text-center">
                        <div class="border-end">
                            <h3 class="text-secondary mb-0">{{summary.total_ratings}}</h3>
                            <small class="text-muted">{{#str}} totalratings, local_datacurso_ratings {{/str}}</small>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 text-center">
                        <div class="border-end">
                            <h3 class="text-success mb-0">{{summary.total_likes}}</h3>
                            <small class="text-muted">üëç {{#str}} likes, local_datacurso_ratings {{/str}}</small>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 text-center">
                        <div class="border-end">
                            <h3 class="text-danger mb-0">{{summary.total_dislikes}}</h3>
                            <small class="text-muted">üëé {{#str}} dislikes, local_datacurso_ratings {{/str}}</small>
                        </div>
                    </div>
                    <div class="col-md-2 col-sm-4 text-center">
                        <h3 class="text-{{summary.satisfaction_class}} mb-0">{{summary.overall_satisfaction}}%</h3>
                        <small class="text-muted">{{#str}} satisfaction, local_datacurso_ratings {{/str}}</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- AI analysis of comments -->
<div class="mb-3 mt-3">
    <button  
        class="btn btn-outline-secondary btn-generate-ai-course" >
        {{#str}} generatecommentaicourse, local_datacurso_ratings {{/str}} ‚ú®
    </button>
    <div class="ai-analysis-result-course mt-2"></div>
</div>

<!-- Ratings Table -->
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th data-sort="actividad">{{#str}} activity, local_datacurso_ratings {{/str}}</th>
                <th data-sort="total_ratings" class="text-center">{{#str}} totalratings, local_datacurso_ratings {{/str}}</th>
                <th data-sort="likes" class="text-center">üëç {{#str}} likes, local_datacurso_ratings {{/str}}</th>
                <th data-sort="dislikes" class="text-center">üëé {{#str}} dislikes, local_datacurso_ratings {{/str}}</th>
                <th data-sort="porcentaje" class="text-center">{{#str}} satisfaction, local_datacurso_ratings {{/str}}</th>
                <th class="text-center">{{#str}} comments, local_datacurso_ratings {{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#activities}}
            <tr {{^has_ratings}}class="table-secondary opacity-75"{{/has_ratings}}>
                <td>
                    <div class="d-flex align-items-center">
                        <strong>
                            <a href="{{activityurl}}" target="_blank">{{actividad}}</a>
                        </strong>
                        {{^has_ratings}}
                        <span class="badge bg-secondary ms-2 small">{{#str}} noratings, local_datacurso_ratings {{/str}}</span>
                        {{/has_ratings}}
                    </div>
                </td>
                <td class="text-center">
                    <span>{{total_ratings}}</span>
                </td>
                <td class="text-center">
                    {{#has_ratings}}
                    <span class="text-success fw-bold">{{likes}}</span>
                    {{/has_ratings}}
                    {{^has_ratings}}
                    <span class="text-muted">0</span>
                    {{/has_ratings}}
                </td>
                <td class="text-center">
                    {{#has_ratings}}
                    <span class="text-danger fw-bold">{{dislikes}}</span>
                    {{/has_ratings}}
                    {{^has_ratings}}
                    <span class="text-muted">0</span>
                    {{/has_ratings}}
                </td>
                <td class="text-center">
                    {{#has_ratings}}
                    <span>{{formatted_percentage}}</span>
                    {{/has_ratings}}
                    {{^has_ratings}}
                    <span class="text-muted">N/A</span>
                    {{/has_ratings}}
                </td>
                <!-- Comentarios con modal -->
                <td class="text-center">
                    {{#has_comments}}
                    <button type="button" 
                            class="btn btn-sm btn-outline-info view-comments-modal"
                            data-cmid="{{cmid}}"
                            data-activity="{{activity}}">
                        {{#str}} viewcomments, local_datacurso_ratings {{/str}}
                    </button>
                    {{/has_comments}}
                    {{^has_comments}}
                    <span class="text-muted">{{#str}} nocomments, local_datacurso_ratings {{/str}}</span>
                    {{/has_comments}}
                </td>
            </tr>
            {{/activities}}
        </tbody>
    </table>
</div>

{{/has_data}}

{{^has_data}}
<!-- No Data Message -->
<div class="text-center py-5">
    <div class="mb-4">
        <i class="fa fa-chart-line fa-3x text-muted"></i>
    </div>
    <h4 class="text-muted">{{#str}} nodataavailable, local_datacurso_ratings {{/str}}</h4>
    <p class="text-muted">{{#str}} nodatadescription, local_datacurso_ratings {{/str}}</p>
    <div class="mt-4">
        <a href="#" class="btn btn-primary" onclick="location.reload()">
            <i class="fa fa-refresh"></i> {{#str}} refresh, local_datacurso_ratings {{/str}}
        </a>
    </div>
</div>
{{/has_data}}
