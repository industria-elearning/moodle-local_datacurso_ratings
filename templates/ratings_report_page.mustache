    <h2>{{title}}</h2>

    <div class="report-controls" style="display:flex; gap:0.5rem; align-items:center; margin-bottom:0.75rem;">
        <input type="search" class="report-filter" placeholder="{{#str}} filterplaceholder, local_datacurso_ratings {{/str}}" />
